<!DOCTYPE html>
<html lang="en">
<% include ./partials/head.ejs %>
<link rel="stylesheet" href="/static/register.css">
<body>
<%- include('partials/nav', {currentPage: 'register'}) %>
<main class="pure-g">
  <div class="pure-u-sm-1">
    <h1>Register</h1>
  </div>
  <div class="pure-u-sm-1 center" id="registration-box">
    <form id="register-form" class="pure-form pure-form-aligned">
      <div class="pure-control-group">
        <label for="name-input">Name:</label>
        <input id="name-input" type="text">
      </div>
      <div class="pure-control-group">
        <label for="email-input">Email:</label>
        <input id="email-input" type="email">
      </div>
      <div class="pure-control-group">
        <label for="password-input">Password:</label>
        <input id="password-input" type="password">
      </div>
      <input id="login-submit" class ="pure-button pure-button-primary" type="submit" value="Register">
    </form>
    <div id="error-message"></div>
  </div>
</main>
<script src="/static/register.bundle.js"></script>
</body>
</html>
